<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping>
    <entity name="User\Group\Domain\Entity\UserGroup">
        <id name="uuid" type="user_group_uuid"/>

        <field name="name" type="string" length="50" unique="true"/>

        <many-to-many field="users" target-entity="User\Data\Domain\Entity\UserData">
            <cascade>
                <cascade-all/>
            </cascade>
            <join-table name="user_group_aggregate">
                <join-columns>
                    <join-column name="user_group_uuid" referenced-column-name="uuid"/>
                </join-columns>
                <inverse-join-columns>
                    <join-column name="user_data_uuid" referenced-column-name="uuid"/>
                </inverse-join-columns>
            </join-table>
        </many-to-many>
    </entity>
</doctrine-mapping>