<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping>
    <entity name="User\Data\Domain\Entity\UserData">
        <id name="uuid" type="uuid"/>

        <field name="name" type="string" length="50"/>
        <field name="surname" type="string" length="50"/>
        <field name="email" type="string" unique="true" length="100"/>
        <field name="password" type="string" length="96"/>
    </entity>
</doctrine-mapping>